<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrafficEscapeGame.Views.SettingsPage"
             Title="Settings">

    <VerticalStackLayout BackgroundColor="SteelBlue" Padding="20" Spacing="15">
        <Button Text="â† Back to Main Menu" 
                Clicked="OnBackToMainMenuClicked"
                BackgroundColor="DarkBlue"
                TextColor="White"
                HeightRequest="50"/>

        <Label Text="Difficulty Settings" 
               FontSize="28"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"/>

        <Border Padding="20" BackgroundColor="LightSteelBlue" Stroke="DarkBlue">
            <VerticalStackLayout Spacing="15">
                
                <RadioButton GroupName="Difficulty"
                           Content="Easy - 1 car every 2 seconds"
                           IsChecked="{Binding IsEasy}"/>

                <RadioButton GroupName="Difficulty"
                           Content="Normal - 1 car every 1 seconds"
                           IsChecked="{Binding IsNormal}"/>

                <RadioButton GroupName="Difficulty"
                           Content="Hard - 1 car every 0.4 second"
                           IsChecked="{Binding IsHard}"/>
            </VerticalStackLayout>
        </Border>

        <Label Text="Appearance" 
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"/>

        <Border Padding="20" BackgroundColor="LightSteelBlue" Stroke="DarkBlue">
            <VerticalStackLayout Spacing="15">
                <HorizontalStackLayout>
                    <Label Text="Sound Effects" 
                           FontSize="18"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>
                    <Switch IsToggled="{Binding Settings.SoundEnabled}"
                            Toggled="OnSoundToggled"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>

        <Label Text="Changes are saved automatically" 
               FontSize="14"
               FontAttributes="Italic"
               TextColor="White"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>